<h1>タスク一覧</h1>
<% if logged_in? %>
  <p>ログイン完了ユーザ: <%= current_user.name %></p>
  <ul>
  <% @tasks.each do |task| %>
    <li><%= link_to task.id, task %> : <%= task.content %> &gt; <%= task.status %></li>
  <% end %>
  </ul>
  <%= link_to '新規タスクの投稿', new_task_path %>
  <%= link_to 'Logout', logout_path, method: :delete %>
  <%= render 'tasks/tasks', tasks: @tasks %>
<% end %>